<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="60dp"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  android:background="@drawable/document_list_item_bg">

  <ImageView
    android:id="@+id/documentIconImageView"
    android:layout_width="55dp"
    android:layout_height="55dp"
    app:srcCompat="@drawable/file_txt" android:scaleType="centerInside"/>

  <TextView
    android:id="@+id/documentNameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:textColor="@color/white"
    android:text="document.txt"
    android:textSize="10sp"
    android:textAlignment="center"/>

</LinearLayout>